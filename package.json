{
  "name": "sureclaw",
  "version": "0.1.0",
  "description": "Security-first personal AI agent",
  "type": "module",
  "main": "dist/host.js",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:fuzz": "vitest run tests/ipc-fuzz.test.ts",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint --fix src/ tests/",
    "start": "NODE_NO_WARNINGS=1 tsx src/host.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js}": "eslint"
  },
  "keywords": [
    "ai",
    "agent",
    "security",
    "sandbox"
  ],
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@mariozechner/pi-agent-core": "^0.52.9",
    "@mariozechner/pi-ai": "^0.52.9",
    "@sinclair/typebox": "^0.34.48",
    "better-sqlite3": "^12.6.2",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.2",
    "eslint": "^9.39.2",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-security": "^3.0.1",
    "fast-check": "^4.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
